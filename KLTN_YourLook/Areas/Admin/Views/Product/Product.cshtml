@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers *@
@using X.PagedList.Mvc.Core;
@using KLTN_YourLook.Areas.Admin.Models;
@{
    ViewData["Title"] = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model X.PagedList.IPagedList<AllProductViewModel>
<div class="cp0">
    Danh Sách Sản Phẩm
</div>
<div class="h-cp1">
    <div class="h-cp-f">
        <div class="h-cp-up">
            <div class="bt-c"><a href="@Url.Action("ProductCreat", "Admin")">Tạo sản phẩm mới</a></div>
            <div class="bt-c"><a href="">In dữ liệu </a></div>
            <div class="bt-c"><a href="">Xuất Excel</a></div>
            <div class="bt-c"><a href="">Xuất PDF</a></div>
        </div>
        <div class="h-cp-mid">
            <div class="mesages">
                 @TempData["Message"]
            </div>
            <div class="flspe">
                <input class="form-search" type="text" placeholder="Tìm Kiếm Mã Sản phẩm/ Tên sản phẩm . . .">
                <button>Tìm Kiếm</button>
            </div>
            <table class="h-table">
                <thead>
                    <tr>
                        <th class="hidden">Id</th>
                        <th>Mã SP</th>
                        <th>Ảnh SP </th>
                        <th>Tên SP</th>
                        <th>Giá gốc</th>
                        <th>Giá áp dụng</th>
                        <th>% Giảm giá</th>
                        <th>Phân loại</th>
                        <th>Nhóm</th>
                        <th>Số Lượng</th>
                        <th>Đã Bán</th>
                        <th>Hiển Thị</th>
                        <th>Mục Hot</th>
                        <th>Mục Sale</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var prd in Model)
                        {
                            <tr>
                                <td class="hidden">@prd.IdSp</td>
                                <td>@prd.MaSp</td>
                                <td><img src="@Url.Content("/img/"+prd.AnhSp)" alt=""></td>
                                <td>@prd.TenSp</td>
                                <td>@string.Format("{0:N0}", prd.PriceMax)</td>
                                @if (prd.PriceMin != null && prd.PriceMin != 0)
                                {
                                    <td>@string.Format("{0:N0}", prd.PriceMin)</td>
                                }
                                else
                                {
                                    <td>@string.Format("{0:N0}", prd.PriceMax)</td>
                                }
                                <td>@prd.GiamGia %</td>
                                <td>@prd.TenDm</td>
                                <td>@prd.GroupName</td>
                                <td></td>
                                <td>@prd.LuotSold</td>
                                @if (prd.IActive == true)
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od"></div>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od-none"></div>
                                        </div>
                                    </td>
                                }
                                @if (prd.IHot == true)
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od"></div>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od-none"></div>
                                        </div>
                                    </td>
                                }
                                @if (prd.ISale == true)
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od"></div>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div class="fljct" style="width:100%">
                                            <div class="check-od-none"></div>
                                        </div>
                                    </td>
                                }
                                <td>
                                    <a href="@Url.Action("XoaSanPham", new { masp = prd.MaSp })" onclick="deletesp(event)" style="color: #000;">Xóa</a>
                                    <a asp-action="SuaSanPham" asp-route-masp="@prd.MaSp" style="color: black;">Sửa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10">sản phẩm trống</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Product", "Product", new { page = page }))

<script type="text/javascript">
    function deletesp(event) {
        event.preventDefault();
        var userConfirmed = confirm("Bạn có chắc chắn muốn xóa sản phẩm này không?");
        if (userConfirmed) {
            var url = event.currentTarget.getAttribute("href");
            window.location.href = url;
        }
    }
</script>