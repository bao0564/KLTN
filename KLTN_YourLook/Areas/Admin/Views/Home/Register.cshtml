@* @model KLTN_YourLook.Areas.Admin.Models.View_Admin_Register *@
@model Data.Models.DbAdmin
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="menu-cp">
    <div class="cp0">
        Thêm / Tạo Tài khoản mới
    </div>
    <div class="h-cp1">
        <div class="h-cp-up">
            <div class="flct mg">
                <a asp-action="ViewAccounts"><img style="height:20px" src="\icon\drop left.svg" /> </a>
            </div>
        </div>
        @* @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        } *@
        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="col-12 fl">
                <div class="col-4">
                    <label class="control-label">Email</label>
                    <input asp-for="EmailDn" class="form-control" />
                    <span asp-validation-for="EmailDn" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label class="control-label">Tên</label>
                    <input asp-for="NameDn" class="form-control" />
                    <span asp-validation-for="NameDn" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label class="control-label">Mật khẩu</label>
                    <input asp-for="PasswordDn" class="form-control" />
                    <span asp-validation-for="PasswordDn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 fl">
                <div class="col-4">
                    <label class="control-label">Chức vụ</label>
                    <select asp-for="ChucVu" class="form-control">
                        <option value="">--chọn--</option>
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <option value="Admin">Quản trị viên</option>
                            <option value="Manager">Quản lý</option>
                            <option value="Staff" selected="selected">Nhân viên</option>
                        }
                        else if (Context.Session.GetString("Role") == "Manager")
                        {
                            <option value="Staff" selected="selected">Nhân viên</option>
                        }
                    </select>
                    <span asp-validation-for="ChucVu" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label class="control-label">Quyền</label>
                    <select asp-for="Quyen" class="form-control">
                        <option value="">--chọn--</option>
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <option value="Admin">Quản trị viên</option>
                            <option value="Manager">Quản lý</option>
                            <option value="Staff" selected="selected">Nhân viên</option>
                        }
                        else if (Context.Session.GetString("Role") == "Manager")
                        {
                            <option value="Staff" selected="selected">Nhân viên</option>
                        }
                    </select>
					<span asp-validation-for="Quyen" class="text-danger"></span>
				</div>
            </div>
            <div class="col-12 fljct">
                <div class="mg">
                    <input type="submit" value="Tạo Mới" class=" btn-primary" />
                </div>
            </div>
        }
    </div>
</div>

