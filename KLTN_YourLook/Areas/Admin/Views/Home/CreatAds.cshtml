@model Data.Models.DbAds
@{
    ViewData["Title"] = "CreatAds";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="menu-cp">
    <div class="cp0">
        Thêm / Tạo ads mới
    </div>
    <div class="h-cp1">
        <div class="h-cp-up">
            <div class="flct mg">
                <a asp-action="Ads"><img style="height:20px" src="\icon\drop left.svg" /> </a>
            </div>
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="CreatAds" method="post" enctype="multipart/form-data">
            <div class="h-cp-mid-1">
                <div class="col-3">
                    <label class="control-label"> Tiêu Đề</label>
                    <input asp-for="MaAds" class="form-control" />
                    <span asp-validation-for="MaAds" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label">Ảnh</label>
                    <input type="file" name="FileAnh" class="form-control" />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div> 
                <div class="col-3">
                    <label class="control-label"> vị trí</label>
                    <select asp-for="Place" class="form-control" value=".">
                        <option value="ads">Chạy đầu Trang Web</option>
                        <option value="page1">Danh Mục Quần Dài</option>
                        <option value="page2">Danh Mục Quần Short</option>
                        <option value="page3">Danh Mục Áo Phông</option>
                        <option value="page4">Danh Mục Áo Khoác</option>
                        <option value="All">Page ALL</option>
                        <option value="Hot">Page Hot</option>
                        <option value="New">Page New</option>
                        <option value="Sale">Page Sale</option>
                        <option value="Under">Page Under</option>
                    </select> 
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label">Hiển thị</label>
                    <div class="custom-control custom-checkbox">
                        @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                        <label for="customCheckbox2" class="custom-control-label">Hiển thị</label>
                    </div>
                </div>
            </div>
            <div class="h-cp-dow fljct">
                <div class="mg">
                    <input type="submit" value="Thêm Mới" class="" />
                </div>
            </div>
        </form>
    </div>
</div>
